

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>@ViewData["Title"] - HomeBudgetApp.MVC.UI</title>
    <style>
        /* Custom styles */
        .custom-sidebar {
            width: 200px; /* Adjust the width as needed */
        }

        .sidebar .nav-link {
            color: white;
        }

        .sidebar .nav-link:hover {
             color: yellow;
        }

        .social-links {
            display: flex;
            justify-content: center;
        }

     </style>
</head>
<body>
    <div class="container-fluid" style="position:fixed">
        <div class="row">
            <aside class="bg-dark text-light col-2 sidebar" style="height: 100vh; width:175px">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">HomeBudgetApp</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Expense" asp-action="GetAllExpenses" class="nav-link">Expenses</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Income" asp-action="GetAllIncomes" class="nav-link">Income</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Expense" asp-action="ShowDataInCharts" class="nav-link">ExpenseCharts</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Income" asp-action="ShowDataInCharts" class="nav-link">IncomeCharts</a>
                    </li
                     <li class="nav-item">
                        <a asp-controller="Expense" asp-action="ShowDataInChartsByMonths" class="nav-link">ExpenseCharts ByMonth</a>
                    </li>
                      <li class="nav-item">
                        <a asp-controller="Income" asp-action="ShowDataInChartsByMonths" class="nav-link">Income Charts ByMonth</a>
                    </li>
                </ul>
            </aside>

            <main class="col-10">
                <div class="container mt-3 pt-4">
                  <script src="~/lib/jquery/dist/jquery.min.js"></script>
                    @RenderBody()
                </div>
            </main>

        </div>
    </div>

<footer class="w-100 py-4 bg-dark mt-0" style="position: fixed; bottom:0; width:100%">
    <div class="social-links">
        <a href="https://www.linkedin.com/in/ulugbek-toshtemirov-912b04262/">
            <img src="~/css/linkedin.png" alt="LinkedIn" style="filter: brightness(150%); width: 24px; height: 24px;" />
        </a>
        <a href="https://github.com/Ulugbek4499">
           <img src="~/css/github.png" alt="GitHub" style="filter: brightness(150%); width: 24px; height: 24px;" />
        </a>
        <a href="https://t.me/Ulugbek_Toshtemirov">
           <img src="~/css/telegram.png" alt="Telegram" style="filter: brightness(150%); width: 24px; height: 24px;" />
        </a>
    </div>
</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
